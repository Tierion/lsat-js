{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["DOM","es2017"],
    "strict": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "allowJs": true
  },
  "include": ["src/**/*.ts"]
}
